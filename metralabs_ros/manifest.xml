<package>
  <description brief="metralabs_ros">

    ROS driver for the MetraLabs Scitos G5 mobile robot using the MetraLabs ABI.
    Optionally a Schunk manipulator can be controlled.

  </description>
  <author>Yianni Gatsoulis and Chris Burbridge and Lorenzo Riano and Felix Kolbe</author>
  <license>GPL</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/metralabs_ros</url>
  
  <depend package="roscpp"/>
  <depend package="rospy"/>

  <depend package="tf"/>
  <depend package="urdf"/>

  <depend package="actionlib"/>
  <depend package="dynamic_reconfigure"/>
  
  <depend package="metralabs_msgs"/>
  
  <depend package="diagnostic_msgs"/>
  <depend package="std_msgs"/>
  <depend package="sensor_msgs"/>
  <depend package="geometry_msgs"/>
  
  <depend package="nav_msgs"/>
  <depend package="control_msgs"/>
  <depend package="trajectory_msgs"/>
  <depend package="pr2_controllers_msgs"/>

</package>
